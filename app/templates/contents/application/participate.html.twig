{% extends 'layouts/content/application.html.twig' %}

{% block title %}{{ 'Participate'|trans }} | {{ parent() }}{% endblock %}

{% set isContainerFluid = false %}

{% block main %}
	{% if alert is defined and alert %}
		<div class="alert alert-{{ alert }}">
			{{ alertMessage | raw }}
		</div>
	{% endif %}
	{% if showForm %}
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				{% include 'contents/application/_participate-panel.html.twig' %}
			</div>
		</div>
	{% endif %}
{% endblock %}
