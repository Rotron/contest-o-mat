{% extends 'layouts/content/application.html.twig' %}

{% set isContainerFluid = false %}

{% block main %}
	<h2>
		To participate in our prizegame,
		please fill out the following form:
	</h2>
	{% if alert is defined and alert %}
		<div class="alert alert-{{ alert }}">
			{{ alertMessage }}
		</div>
	{% endif %}
	{% if showForm %}
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				{% include 'contents/application/_participate-form.html.twig' %}
			</div>
		</div>
	{% endif %}
{% endblock %}
