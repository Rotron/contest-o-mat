{% extends 'layouts/content/members-area.html.twig' %}

{% block title %}{{ 'Settings'|trans }} | {{ parent() }}{% endblock %}

{% block main %}
    <h1>{{ 'Settings'|trans }}</h1>
    <ol class="breadcrumb">
        <li>
            <a href="{{ url('members-area') }}">
                {{ 'Home' | trans }}
            </a>
        </li>
        <li class="active">
            {{ 'Settings' | trans }}
        </li>
    </ol>
    <div id="main-content">
        <div id="settings-form-wrapper">
            {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-6">
                        <h3>{{ 'General' | trans }}</h3>
                        {{ form_row(form.registrationEnabled) }}
                        <hr />
                        {{ form_row(form.useSameParticipantDataAfterFirstEntry) }}
                        {{ form_row(form.useFacebookUserAsParticipantIfPossible) }}
                        {{ form_row(form.onlyFacebookUsersCanParticipate) }}
                        {{ form_row(form.entriesArePublic) }}
                        {{ form_row(form.showWinners) }}
                        <hr />
                        <h3>{{ 'Intervals' | trans }}</h3>
                        {{ form_row(form.participateInterval) }}
                        {{ form_row(form.voteInterval) }}
                        <hr />
                        <h3>{{ 'Dates' | trans }}</h3>
                        {{ form_row(form.startDate) }}
                        {{ form_row(form.endDate) }}
                    </div>
                    <div class="col-md-6">
                        <h3>{{ 'Texts' | trans }}</h3>
                        {{ form_row(form.texts) }}
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
