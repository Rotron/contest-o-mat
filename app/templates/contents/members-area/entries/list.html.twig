{% extends 'layouts/content/members-area.html.twig' %}

{% block title %}{{ 'Entries'|trans }} | {{ parent() }}{% endblock %}

{% block main %}
	<h1>
		{{ 'Entries'|trans }}
		<a class="btn btn-primary btn-sm"
			href="{{ url('members-area.entries.new') }}">
			{{ 'New'|trans }}
		</a>
		<a class="btn btn-warning btn-sm"
			href="{{ url('members-area.entries.export') }}">
			{{ 'Export to CSV'|trans }}
		</a>
	</h1>
	<ol class="breadcrumb">
		<li>
			<a href="{{ url('members-area') }}">
				{{ 'Home' | trans }}
			</a>
		</li>
		<li class="active">
			{{ 'Entries' | trans }}
		</li>
	</ol>
	{{ paginator_top_render(pagination) }}
	<div class="table-responsive">
		<table class="table table-striped table-condensed">
			<thead>
				<tr>
					<th>{{ 'Metas' | trans }}</th>
					<th>{{ paginator_sortable(pagination, 'IP', 'e.ip') }}</th>
					<th>{{ paginator_sortable(pagination, 'User Agent', 'e.userAgent') }}</th>
					<th>{{ paginator_sortable(pagination, 'Participant', 'p.email') }}</th>
					<th width="160">{{ paginator_sortable(pagination, 'Time Created', 'e.timeCreated') }}</th>
					<th width="100">{{ 'Actions'|trans }}</th>
				</tr>
			</thead>
			<tbody>
				{% for entry in pagination.getItems() %}
					<tr>
						<td>
							{% set entryMetas = entry.getEntryMetas() %}
							{% if entryMetas %}
								<ul>
									{% for entryMeta in entryMetas %}
										<li>{{ entryMeta }}</li>
									{% endfor %}
								</ul>
							{% endif %}
						</td>
						<td>
							{% set entryIp = entry.getIp() %}
							{% if entryIp and app['settings']['doIpGeolocation'] %}
								{% set ipParserInfo = app['ip.parser'].parse( entryIp ) %}
								<ul class="list-unstyled">
									<li>
										<b>{{ 'IP' | trans }}:</b>
										{{ entryIp }}
									</li>
									{% if ipParserInfo.geoplugin_city is defined and ipParserInfo.geoplugin_city %}
										<li>
											<b>{{ 'City' | trans }}:</b>
											{{ ipParserInfo.geoplugin_city }}
										</li>
									{% endif %}
									{% if ipParserInfo.geoplugin_region is defined and ipParserInfo.geoplugin_region %}
										<li>
											<b>{{ 'Region' | trans }}:</b>
											{{ ipParserInfo.geoplugin_region }}
										</li>
									{% endif %}
									{% if ipParserInfo.geoplugin_countryCode is defined and ipParserInfo.geoplugin_countryCode %}
										<li>
											<b>{{ 'Country' | trans }}:</b>
											{{ ipParserInfo.geoplugin_countryCode }} /
											{{ ipParserInfo.geoplugin_countryName }}
										</li>
									{% endif %}
									{% if ipParserInfo.geoplugin_continentCode is defined and ipParserInfo.geoplugin_continentCode %}
										<li>
											<b>{{ 'Country' | trans }}:</b>
											{{ ipParserInfo.geoplugin_continentCode }}
										</li>
									{% endif %}
								</ul>
							{% elseif entryIp %}
								{{ entryIp }}
							{% endif %}
						</td>
						<td>
							{% set entryUserAgent = entry.getUserAgent() %}
							{% if entryUserAgent %}
								{% set uaParserInfo = app['ua.parser'].parse( entryUserAgent ) %}
								<ul class="list-unstyled">
									<li class="hidden">
										<b>{{ 'User Agent' | trans }}:</b>
										{{ entry.getUserAgent() }}
									</li>
									<li>
										<b>{{ 'Browser' | trans }}:</b>
										{{ uaParserInfo.ua }}
									</li>
									<li>
										<b>{{ 'Operating system' | trans }}:</b>
										{{ uaParserInfo.os }}
									</li>
									<li>
										<b>{{ 'Device' | trans }}:</b>
										{{ uaParserInfo.device }}
									</li>
								</ul>
							{% endif %}
						</td>
						<td>{{ entry.getParticipant() }}</td>
						<td>{{ entry.getTimeCreated()|date(app.dateTimeFormat) }}</td>
						<td>
							<a class="btn btn-sm btn-default filter-submit margin-bottom"
								data-toggle="tooltip" title="{{ 'Edit'|trans }}"
								href="{{ url('members-area.entries.edit', { id : entry.getId() }) }}">
								<i class="fa fa-fw fa-cog"></i>
							</a>
							<a class="btn btn-sm btn-default filter-submit margin-bottom"
								data-toggle="tooltip" title="{{ 'Remove'|trans }}"
								href="{{ url('members-area.entries.remove', { id : entry.getId() }) }}">
								<i class="fa fa-fw fa-times"></i>
							</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="99">{{ 'No entries yet'|trans }}</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
	{{ paginator_bottom_render(pagination) }}
	{% if app['settings']['doIpGeolocation'] %}
		<p>
			Some of the returned data includes GeoLite data created by MaxMind,
			available from <a href="http://www.maxmind.com">http://www.maxmind.com</a>.
		</p>
	{% endif %}
{% endblock %}
